<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.isaude" version="7.8.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    
    <name>iSaude</name>
    <description>Saúde, humanizaçäo e tecnologia</description>
    <author>ALVO COMUNICAÇÃO</author>
    <preference name="phonegap-version" value="cli-9.0.0" />
    <preference name="permissions" value="none" />
    <preference name="Orientation" value="portrait" />
    <preference name="pgb-builder-version" value="1" />
    <preference name="xwalkMultipleApk" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="2" />
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="BackgroundColor" value="#ffffff" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="transparent" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    
    <content src="index.html" />
    
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="https://maps.google.com/*" />
    <allow-navigation href="https://www.google.com.br/*" />
    <allow-navigation href="*/maps.google.com/*" />
    
    <access origin="*" />       
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
            <string>Usado para anexar fotos ao perfil da conta</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSContactsUsageDescription">
            <string>Usamos seus contatos para adicioná-los nos acessos como visitantes</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>Usado para tirar fotos para o perfil da conta</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
            <string>precisa de acesso à localização para encontrar locais nas proximidades</string>
        </edit-config>
        
        <splash src="package-assets/Default@2x~iphone~anyany.png" />
        <splash src="package-assets/Default@2x~iphone~comany.png" />
        <splash src="package-assets/Default@3x~iphone~anyany.png" />
        <splash src="package-assets/Default@3x~iphone~comany.png" />
        <splash src="package-assets/Default@2x~ipad~anyany.png" />
        <splash src="package-assets/Default@2x~ipad~comany.png" />
        
        <icon height="1024" src="package-assets/icon-1024.png" width="1024" />
        <icon height="29" src="package-assets/Icon-Small.png" width="29" />
        <icon height="114" src="package-assets/Icon@2x.png" width="114" />
        <icon height="167" src="package-assets/Icon-83.5@2x.png" width="167" />
        <icon height="152" src="package-assets/Icon-76@2x.png" width="152" />
        <icon height="180" src="package-assets/Icon-60@3x.png" width="180" />
        <icon height="100" src="package-assets/Icon-Small-50@2x.png" width="100" />
        <icon height="72" src="package-assets/Icon-72.png" width="72" />
        <icon height="144" src="package-assets/Icon-72@2x.png" width="144" />
        <icon height="50" src="package-assets/Icon-Small-50.png" width="50" />
        <icon height="57" src="package-assets/icon57.png" width="57" />
        <icon height="40" src="package-assets/Icon-Small-40.png" width="40" />
        <icon height="80" src="package-assets/Icon-Small-40@2x.png" width="80" />
        <icon height="120" src="package-assets/Icon-60@2x.png" width="120" />
        <icon height="87" src="package-assets/icon87.png" width="87" />
        <icon height="60" src="package-assets/icon60.png" width="60" />
        <icon height="76" src="package-assets/Icon-76.png" width="76" />
        <icon height="58" src="package-assets/Icon-Small@2x.png" width="58" />
       
  
   
    <plugin name="cordova-plugin-crop" />
    <plugin name="cordova-plugin-device" />
    <plugin name="cordova-plugin-file" />
    <plugin name="cordova-plugin-file-transfer" />
    <plugin name="cordova-plugin-whitelist" />
    <plugin name="cordova-plugin-inappbrowser" />
    <plugin name="cordova-plugin-device-orientation" source="npm" spec="*" />
    <plugin name="cordova-plugin-geolocation" spec="2.4.3">
     <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="Este aplicativo usa sua localização para o mapa."/>
    </plugin>
    <plugin name="cordova-plugin-splashscreen" spec="~5.0.3" />
    <plugin name="cordova-plugin-compat" />
    <!--<plugin name="cordova-plugin-camera">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="Usaremos sua foto no perfil do App"/>
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Usaremos sua foto no perfil do App"/>
    </plugin>-->
    <plugin name="cordova-plugin-ios-camera-permissions">
           <variable name="CAMERA_USAGE_DESCRIPTION" value="Usaremos sua foto no perfil do App" />
           <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Usaremos sua foto no perfil do App" />
       </plugin>
    <plugin name="cordova-plugin-statusbar" spec="https://github.com/apache/cordova-plugin-statusbar.git" />
    <plugin name="onesignal-cordova-plugin" spec="2.5.2" />
    
    <engine name="ios" spec="^4.5.5" />
    <engine name="android" spec="^6.2.3" />
    <engine name="browser" spec="^4.1.0" />
</widget>
